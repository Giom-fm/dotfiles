set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

hide_edge_borders smart


## Autostart
exec_always 	--no-startup-id 	        $HOME/Dokumente/config/polybar/launch.sh
exec_always     --no-startup-id                 nm-applet
exec_always     --no-startup-id                 nextcloud
exec_always     --no-startup-id                 blueman-applet
exec_always     --no-startup-id                 light-locker --lock-on-lid
#exec --no-startup-id                   feh --bg-center /usr/share/backgrounds/manjarowall17_02.jpg
exec_always --no-startup-id                     udiskie

## Bindsysms
# Programms
bindsym         $mod+x                  exec firefox
bindsym         $mod+c                  exec code
bindsym         $mod+Return             exec alacritty -e tmux new-session -A -s terminal
#bindsym         $mod+f                  exec alacritty -t Ranger -e tmux new-session -A -s ranger "ranger --debug --logfile=/tmp/ranger.log"
bindsym         $mod+f                  exec alacritty -t Ranger -e tmux new-session -A -s ranger "ranger"
bindsym         $mod+m                  exec thunderbird
bindsym         $mod+t                  exec telegram-desktop
bindsym         $mod+k                  exec keepassxc
bindsym         $mod+l                  exec --no-startup-id light-locker-command -la
bindsym         $mod+b                  exec speedcrunch
bindsym         $mod+n                  exec joplin-desktop
bindsym		$mod+i			exec flameshot gui

# Commands
bindsym         $mod+q                  kill
bindsym         $mod+space              exec --no-startup-id rofi -show drun
bindsym         $mod+Shift+x            exec "i3-nagbar -t warning -m 'Do you really want to shutdown?' -b 'Shutdown' 'shutdown 00'"

# Backlight
bindsym         XF86MonBrightnessDown   exec --no-startup-id light -U 1 && exec polybar-msg hook backlight 1
bindsym         XF86MonBrightnessUp     exec --no-startup-id light -A 1 && exec polybar-msg hook backlight 1

# Volume
bindsym         XF86AudioRaiseVolume    exec --no-startup-id pamixer -i 2 && pkill -RTMIN+1 i3blocks
bindsym         XF86AudioLowerVolume    exec --no-startup-id pamixer -d 2 && pkill -RTMIN+1 i3blocks
bindsym         XF86AudioMute           exec --no-startup-id pamixer -t && pkill -RTMIN+1 i3blocks

# Monitor Layout
bindsym		$mod+o			exec $HOME/Dokumente/config/i3/laptopmode.sh
bindsym		$mod+p			exec $HOME/Dokumente/config/i3/desktopmode.sh

############### WINDOW MANAGMENT ###############

# Layout
bindsym         $mod+Tab                layout toggle split
bindsym         $mod+e                  layout tabbed

# Focus
bindsym         $mod+Left               focus left
bindsym         $mod+a                  focus left

bindsym         $mod+Right              focus right
bindsym         $mod+d                  focus right

bindsym         $mod+Down               focus down
bindsym         $mod+s                  focus down

bindsym         $mod+Up                 focus up
bindsym         $mod+w                  focus up


# Move  
bindsym         $mod+Shift+Left         move left
bindsym         $mod+Shift+a            move left

bindsym         $mod+Shift+Down         move down
bindsym         $mod+Shift+s            move down

bindsym         $mod+Shift+Up           move up
bindsym         $mod+Shift+w            move up

bindsym         $mod+Shift+Right        move right
bindsym         $mod+Shift+d            move right

# Split
bindsym         $mod+h                  split v
bindsym         $mod+v                  split h

bindsym         $mod+Shift+space        floating toggle
#bindsym         $mod+space              focus mode_toggle
bindsym         $mod+u                  focus parent
bindsym         $mod+j                  focus child

############### WORKSPACE ###############

# Names
set             $ws1                    "1"
set             $ws2                    "2"
set             $ws3                    "3"
set             $ws4                    "4"
set             $ws5                    "5"
set             $ws6                    "6"
set             $ws7                    "7"
set             $ws8                    "8"
set             $ws9                    "9"
set             $ws10                   "10"

# Move
bindsym         $mod+1                  workspace $ws1
bindsym         $mod+2                  workspace $ws2
bindsym         $mod+3                  workspace $ws3
bindsym         $mod+4                  workspace $ws4
bindsym         $mod+5                  workspace $ws5
bindsym         $mod+6                  workspace $ws6
bindsym         $mod+7                  workspace $ws7
bindsym         $mod+8                  workspace $ws8
bindsym         $mod+9                  workspace $ws9
bindsym         $mod+0                  workspace $ws10

# Move Container
bindsym         $mod+Shift+1            move container to workspace $ws1
bindsym         $mod+Shift+2            move container to workspace $ws2
bindsym         $mod+Shift+3            move container to workspace $ws3
bindsym         $mod+Shift+4            move container to workspace $ws4
bindsym         $mod+Shift+5            move container to workspace $ws5
bindsym         $mod+Shift+6            move container to workspace $ws6
bindsym         $mod+Shift+7            move container to workspace $ws7
bindsym         $mod+Shift+8            move container to workspace $ws8
bindsym         $mod+Shift+9            move container to workspace $ws9
bindsym         $mod+Shift+0            move container to workspace $ws10



############### MISC ###############

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

